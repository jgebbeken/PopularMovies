<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/large_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/content_description_large_poster"
        android:paddingBottom="@dimen/padding_eight"
        android:paddingTop="@dimen/padding_eight"
        android:paddingLeft="@dimen/padding_eight"
        android:paddingRight="@dimen/padding_eight"
        android:adjustViewBounds="true"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favoriteStar"
            android:layout_width="@dimen/zero_width"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_favorite_icon"
            android:layout_marginTop="@dimen/margin_eight"
            android:layout_marginEnd="@dimen/margin_eight"
            android:background="@drawable/btn_star_big_on"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>